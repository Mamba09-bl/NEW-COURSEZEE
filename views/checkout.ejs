<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CourseZE - Your Cart</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 text-gray-100">

  <!-- Navbar -->
  <nav class="bg-gradient-to-r from-gray-800 to-black text-white shadow-lg">
    <div class="container mx-auto flex justify-between items-center px-6 py-4">
      <h1 class="text-2xl font-extrabold tracking-wide">CourseZE</h1>
      <ul class="flex space-x-6 font-semibold">
        <li><a href="/trending" class="hover:text-yellow-400 transition">Home</a></li>
        <li><a href="/home" class="hover:text-yellow-400 transition">Programming</a></li>
        <li><a href="/graphic" class="hover:text-yellow-400 transition">Graphic designer</a></li>
        <li><a href="/checkout" class="hover:text-yellow-400 transition">Cart</a></li>
      </ul>
    </div>
  </nav>

  <!-- Cart Header -->
  <header class="text-center py-12 bg-gradient-to-r from-gray-800 to-black text-white shadow-md">
    <h1 class="text-4xl md:text-5xl font-extrabold">ðŸ›’ Your Cart</h1>
    <p class="mt-4 text-lg text-gray-300">Review your selected courses before checkout</p>
  </header>

  <!-- Cart Items -->
  <section class="container mx-auto px-6 py-12">
    <div class="grid gap-6">
      
      <!-- Dummy Course Item -->
       <% user.forEach((product)=>{ %>
      <div class="flex flex-col md:flex-row items-center bg-gray-800 rounded-2xl shadow-md overflow-hidden hover:shadow-xl transition">
        <img src="/images/uploads/<%= product.image %>" alt="Course Thumbnail" class="w-full md:w-1/3 h-48 object-cover">
        <div class="flex-1 p-6">
          <h2 class="text-2xl font-bold text-yellow-400"><%= product.name %></h2>
          <p class="text-gray-300 mt-2"><%= product.discription %></p>
          <p class="mt-3 text-lg font-semibold text-gray-100">ðŸ’° RS:<%= product.price %></p>
        </div>
        <div class="p-6">
          
          <a href="/remove/<%= product.id%>" class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition">Remove</a>
        </div>
      </div>
      <%  }) %>

      

    </div>

  
    <div class="grid gap-6">
      
      <!-- Dummy Course Item -->
       <% latest.forEach((product)=>{ %>
      <div class="flex flex-col md:flex-row items-center bg-gray-800 rounded-2xl shadow-md overflow-hidden hover:shadow-xl transition">
        <img src="/images/uploads/<%= product.image %>" alt="Course Thumbnail" class="w-full md:w-1/3 h-48 object-cover">
        <div class="flex-1 p-6">
          <h2 class="text-2xl font-bold text-yellow-400"><%= product.name %></h2>
          <p class="text-gray-300 mt-2"><%= product.discription %></p>
          <p class="mt-3 text-lg font-semibold text-gray-100">ðŸ’° RS:<%= product.price %></p>
        </div>
        <div class="p-6">
          
          <a href="/cancel/<%= product.id%>" class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition">Remove</a>
        </div>
      </div>
      <%  }) %>




      <% graphic.forEach((product)=>{ %>
      <div class="flex flex-col md:flex-row items-center bg-gray-800 rounded-2xl shadow-md overflow-hidden hover:shadow-xl transition">
        <img src="/images/uploads/<%= product.image %>" alt="Course Thumbnail" class="w-full md:w-1/3 h-48 object-cover">
        <div class="flex-1 p-6">
          <h2 class="text-2xl font-bold text-yellow-400"><%= product.name %></h2>
          <p class="text-gray-300 mt-2"><%= product.discription %></p>
          <p class="mt-3 text-lg font-semibold text-gray-100">ðŸ’° RS:<%= product.price %></p>
        </div>
        <div class="p-6">
          
          <a href="/delete/<%= product.id%>" class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition">Remove</a>
        </div>
      </div>
      <%  }) %>

      

    </div>













    <!-- Cart Summary -->
    <div class="mt-12 bg-gray-800 shadow-lg rounded-2xl p-6 max-w-md ml-auto">
      <h3 class="text-2xl font-bold text-yellow-400 mb-4">Order Summary</h3>
      <div class="flex justify-between mb-2 text-gray-300">
        <p>Subtotal</p>
        <p>RS:<%= bill %></p>
      </div>
      <div class="flex justify-between font-bold text-lg text-gray-100">
        <p>Total</p>
        <p>RS:<%= bill %></p>
      </div>
     
      <!-- frontend -->
<a href="/buy" class="mt-6 block text-center bg-purple-700 text-white px-6 py-3 rounded-xl font-semibold hover:bg-purple-900 transition shadow-lg">Proceed to Checkout</a>

    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-black text-gray-400 py-6 mt-12">
    <div class="container mx-auto text-center">
