<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CourseZE - Home</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 text-gray-100">
  <% if(success.length>0){ %>
        <div id="flash-message" class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500">
            <span class="inline-block mt-1 mb-1 text-white">
                <%= success %>
            </span>
        </div>
  <% } %>

  <!-- Navbar -->
  <nav class="bg-gradient-to-r from-gray-800 to-black text-white shadow-lg">
    <div class="container mx-auto flex justify-between items-center px-6 py-4">
      <h1 class="text-2xl font-extrabold tracking-wide">CourseZE</h1>
      <ul class="flex space-x-6 font-semibold">
        <li><a href="/trending" class="hover:text-yellow-400 transition">Home</a></li>
        <li><a href="/home" class="hover:text-yellow-400 transition">Programming</a></li>
        <li><a href="/graphic" class="hover:text-yellow-400 transition">Graphic designer</a></li>
        <li><a href="/checkout" class="hover:text-yellow-400 transition">Cart</a></li>
      </ul>
    </div>
  </nav>

  <!-- Banner (smaller height) -->
  <section class="relative w-full h-[250px] flex items-center justify-center text-center bg-black">
    <img src="images/uploads/118.jpg" alt="Banner" class="absolute inset-0 w-full h-full object-cover opacity-50">
    <div class="relative z-10">
      <h2 class="text-3xl md:text-4xl font-extrabold text-white drop-shadow-lg">Master Programming with CourseZE ðŸš€</h2>
      <p class="mt-2 text-base md:text-lg text-gray-300">Learn coding, build projects, and grow your career.</p>
    </div>
  </section>

  <!-- Trending Courses -->
  <section class="container mx-auto px-6 py-12">
    <h3 class="text-2xl font-bold text-center mb-8 text-yellow-400">ðŸ”¥ Trending Courses</h3>
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">

      <div class="bg-gray-800 rounded-xl shadow-lg overflow-hidden flex flex-col hover:scale-105 transition-transform duration-300 relative">
        <!-- Badge -->
        <span class="absolute top-3 left-3 bg-yellow-500 text-black text-xs font-bold px-3 py-1 rounded-full shadow">
          ðŸ”¥ Most Popular
        </span>
        <img src="/images/uploads/<%= maxCourse.image %>" alt="<%= maxCourse.name %>" class="w-full h-44 object-cover">
        <div class="p-4 flex flex-col flex-1">
          <h4 class="text-xl font-bold mb-2 text-yellow-400"><%= maxCourse.name %></h4>
          <p class="text-gray-300 mb-3 text-sm flex-1"><%= maxCourse.description %></p>
          <div class="flex flex-col gap-2">
            <a href="/details/<%= maxCourse.playlist %>" 
               class="bg-purple-700 text-white px-4 py-2 rounded-lg font-semibold hover:bg-purple-900 transition text-center text-sm">
               View Details
            </a>
          </div>
        </div>
      </div>

      <div class="bg-gray-800 rounded-xl shadow-lg overflow-hidden flex flex-col hover:scale-105 transition-transform duration-300 relative">
        <!-- Badge -->
        <span class="absolute top-3 left-3 bg-yellow-500 text-black text-xs font-bold px-3 py-1 rounded-full shadow">
          ðŸ”¥ Most Popular
        </span>
        <img src="/images/uploads/<%= maxCoursee.image %>" alt="<%= maxCoursee.name %>" class="w-full h-44 object-cover">
        <div class="p-4 flex flex-col flex-1">
          <h4 class="text-xl font-bold mb-2 text-yellow-400"><%= maxCoursee.name %></h4>
          <p class="text-gray-300 mb-3 text-sm flex-1"><%= maxCoursee.description %></p>
          <div class="flex flex-col gap-2">
            <a href="/details/<%= maxCoursee.playlist %>" 
               class="bg-purple-700 text-white px-4 py-2 rounded-lg font-semibold hover:bg-purple-900 transition text-center text-sm">
               View Details
            </a>
          </div>
        </div>
      </div>

    </div>
  </section>

  <!-- New Arrivals -->
  <section class="container mx-auto px-6 py-12">
    <h3 class="text-2xl font-bold text-center mb-8 text-yellow-400">ðŸ†• New Arrivals</h3>
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      <% user.forEach((course) => { %>
        <div class="bg-gray-800 rounded-xl shadow-lg overflow-hidden flex flex-col hover:scale-105 transition-transform duration-300">
          <img src="/images/uploads/<%= course.image %>" alt="<%= course.name %>" class="w-full h-44 object-cover">
          <div class="p-4 flex flex-col flex-1">
            <h4 class="text-xl font-bold mb-2 text-yellow-400"><%= course.name %></h4>
            <p class="text-gray-300 mb-3 text-sm flex-1"><%= course.description %></p>
            <p class="text-xl font-extrabold text-yellow-400 mb-3">ðŸ’° RS: <%= course.price %></p>
            <div class="flex flex-col gap-2">
              <a href="/details/<%= course.playlist %>" class="bg-purple-700 text-white px-4 py-2 rounded-lg font-semibold hover:bg-purple-900 transition text-center text-sm">View Details</a>
              <a href="/addedtocart/<%= course.id %>" class="bg-green-700 text-white px-4 py-2 rounded-lg font-semibold hover:bg-green-900 transition text-center text-sm">Buy Now</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-black text-gray-400 py-6 mt-12">
    <div class="container mx-auto text-center">
      <p>Â© 2025 CourseZE. All rights reserved.</p>
    </div>
  </footer>

  <script>
    setTimeout(()=>{
      const msg = document.getElementById("flash-message");
      if (msg) msg.style.display = "none";
    },2000)
  </script>
</body>
</html>
